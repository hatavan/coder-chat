<%= form_for @message do |f| %>
  <div class="form-group">
    <%= f.text_field :subject, class: 'form-control', maxlength: 255, placeholder: 'Subject' %>
  </div>
  <div class="form-group">
    <%= f.select :recipient_id, current_user.friends.map{|s| [s.name, s.id]}, {include_blank: 'Select recipient'}, {class: 'form-control', placeholder: 'Recipient'}%>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', placeholder: 'Type message here' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-block btn-info' %>
  </div>
<% end %>