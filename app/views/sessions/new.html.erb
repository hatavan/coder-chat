<div class="card-block">
  <h1 class="card-title">Login</h1>
  <div class="card-text">
    <%= form_tag sessions_path do%>
        <div class="form-group">
          <%= email_field_tag :email, params[:email], class: 'form-control', maxlength: 255, placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Submit', class: 'btn btn-block btn-info' %>
        </div>
    <% end %>
  </div>
</div>

