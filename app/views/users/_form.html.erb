<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', maxlength: 255, placeholder: 'Your E-mail' %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', maxlength: 50, placeholder: 'Name' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmation' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Sign Up', class: 'btn btn-block btn-info' %>
  </div>
<% end %>